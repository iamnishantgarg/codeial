<div class="main-profile" style="text-align: center;">
  <%if(user.id==profile_user.id){%>

  <form action="/users/update/<%=user.id%>" method="POST">
    <input
      type="text"
      name="name"
      placeholder="your name"
      value="<%=user.name%>"
      required
    />
    <input
      type="email"
      name="email"
      placeholder="your email"
      value="<%=user.email%>"
      required
    />
    <input type="submit" value="update" />
  </form>

  <%}else{%>
  <h2><%=profile_user.name%></h2>
  <h3><%=profile_user.email%></h3>
  <%}%>
</div>
