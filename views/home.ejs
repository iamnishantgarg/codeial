<div>
  <h2 style="text-align: center;">Codeial Home Page</h2>
  <section id="feed-posts">
    <h4>Posts</h4>
    <%if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">
      <textarea name="content" id="" cols="30" rows="10" required></textarea>
      <input type="submit" value="post" />
    </form>
    <%}%>
    <div
      id="post-list-container"
      style="text-align: center;display: flex;justify-content: space-around;"
    >
      <ul>
        <%for(post of posts) {%> <%-include('_post')-%> <%}%>
      </ul>
    </div>
  </section>
  <section id="user_friends">
    <%for(u of all_users){%>
    <a href="/users/profile/<%=u.id%>"><%=u.name%></a>
    <%}%>
  </section>
</div>
<script src="/script/home_posts.js"></script>
